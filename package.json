{
  "name": "@readme/syntax-highlighter",
  "description": "ReadMe's React-based syntax highlighter",
  "version": "12.1.1",
  "main": "dist/index.node.js",
  "browser": "dist/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/syntax-highlighter.git"
  },
  "homepage": "https://readmeio.github.io/syntax-highlighter/",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "webpack --progress",
    "lint": "eslint . --ext .jsx --ext .js",
    "prepack": "npm run build",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "start": "webpack serve --open --config ./webpack.config.dev.js",
    "test": "jest --coverage --runInBand",
    "watch": "webpack -w --progress"
  },
  "dependencies": {
    "codemirror": "5.54.0",
    "codemirror-graphql": "1.0.2",
    "prop-types": "^15.7.2",
    "react-codemirror2": "^7.2.1"
  },
  "peerDependencies": {
    "@readme/variable": "^15.1.0",
    "react": "16.x || 17.x",
    "react-dom": "16.x || 17.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@readme/eslint-config": "^10.6.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "babel-jest": "^29.5.0",
    "babel-loader": "^8.2.4",
    "core-js": "^3.31.0",
    "css-loader": "^6.7.3",
    "enzyme": "^3.11.0",
    "eslint": "^8.44.0",
    "glob": "^10.3.1",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "node-sass": "^7.0.3",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.2",
    "terser-webpack-plugin": "^5.3.7",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "prettier": "@readme/eslint-config/prettier",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/index.js",
        "maxSize": "500kb"
      },
      {
        "path": "dist/index.node.js",
        "maxSize": "10kb"
      }
    ]
  }
}
