{
  "name": "@readme/syntax-highlighter",
  "description": "ReadMe's React-based syntax highlighter",
  "version": "10.7.0",
  "main": "dist/index.node.js",
  "browser": "dist/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/syntax-highlighter.git"
  },
  "homepage": "https://readmeio.github.io/syntax-highlighter/",
  "scripts": {
    "build": "webpack",
    "lint": "eslint . --ext .jsx --ext .js",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "start": "webpack-dev-server --open --config ./webpack.config.dev.js",
    "test": "jest --coverage --runInBand",
    "version": "conventional-changelog -i CHANGELOG.md -s && git add CHANGELOG.md",
    "watch": "webpack -w --progress"
  },
  "dependencies": {
    "codemirror": "^5.48.2",
    "prop-types": "^15.7.2",
    "react-codemirror2": "^7.2.1"
  },
  "peerDependencies": {
    "@readme/variable": "*",
    "react": "16.x",
    "react-dom": "16.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@readme/eslint-config": "^5.0.0",
    "@readme/variable": "^13.2.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "conventional-changelog-cli": "^2.1.0",
    "css-loader": "^5.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.0.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sass-loader": "^10.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": "@readme/eslint-config/prettier",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/index.js",
        "maxSize": "500kb"
      },
      {
        "path": "dist/index.node.js",
        "maxSize": "10kb"
      }
    ]
  }
}
