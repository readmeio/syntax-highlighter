{
  "name": "@readme/syntax-highlighter",
  "description": "ReadMe's React-based syntax highlighter",
  "version": "15.0.0-beta.0",
  "main": "dist/index.node.js",
  "browser": "dist/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/syntax-highlighter.git"
  },
  "homepage": "https://readmeio.github.io/syntax-highlighter/",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.node.js",
      "node": "./dist/index.node.js"
    },
    "./browser": {
      "browser": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "require": "./dist-utils/index.js",
      "default": "./dist-utils/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "webpack --progress && tsc",
    "format": "prettier --write . && eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prebuild": "rm -rf dist && rm -rf dist-utils",
    "prepack": "npm run build",
    "pretest": "npm run lint && npm run prettier && tsc --noEmit && knip",
    "prettier": "prettier --check .",
    "start": "webpack serve --open --config ./webpack.config.dev.js",
    "test": "vitest run --coverage",
    "watch": "webpack -w --progress"
  },
  "dependencies": {
    "codemirror": "^5.54.0",
    "codemirror-graphql": "2.2.4",
    "prop-types": "^15.7.2",
    "react-codemirror2": "^8.0.0"
  },
  "peerDependencies": {
    "@readme/variable": "^18.0.0",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@csstools/css-parser-algorithms": "^3.0.5",
    "@readme/eslint-config": "^14.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "html-webpack-plugin": "^5.6.0",
    "jsdom": "^27.4.0",
    "knip": "^5.69.0",
    "prettier": "^3.2.5",
    "sass": "^1.89.2",
    "sass-loader": "^13.3.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8",
    "webpack": "^5.91.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.4"
  },
  "prettier": "@readme/eslint-config/prettier"
}
