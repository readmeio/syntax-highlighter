{
  "name": "@readme/syntax-highlighter",
  "description": "ReadMe's React-based syntax highlighter",
  "version": "10.13.0",
  "main": "dist/index.node.js",
  "browser": "dist/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/syntax-highlighter.git"
  },
  "homepage": "https://readmeio.github.io/syntax-highlighter/",
  "scripts": {
    "build": "webpack --progress",
    "lint": "eslint . --ext .jsx --ext .js",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "start": "webpack serve --open --config ./webpack.config.dev.js",
    "test": "jest --coverage --runInBand",
    "watch": "webpack -w --progress"
  },
  "dependencies": {
    "codemirror": "5.54.0",
    "codemirror-graphql": "^1.0.2",
    "prop-types": "^15.7.2",
    "react-codemirror2": "^7.2.1"
  },
  "peerDependencies": {
    "@readme/variable": "*",
    "react": "16.x",
    "react-dom": "16.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@readme/eslint-config": "^7.1.1",
    "babel-jest": "^27.2.0",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^6.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.4.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "prettier": "@readme/eslint-config/prettier",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/index.js",
        "maxSize": "500kb"
      },
      {
        "path": "dist/index.node.js",
        "maxSize": "10kb"
      }
    ]
  }
}
